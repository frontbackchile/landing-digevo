
.btn
	text-decoration none
	background-color $color_primary
	border 1px solid $color_primary
	color white
	display inline-block
	padding 2px 15px
	text-transform capitalize
	vertical-align middle
	line-height $global-lh
	font-size $global-size-xs
	font-weight 500
	transition .2s ease
	text-align center
	cursor pointer
	border-radius 15px
	@media $break-md
		padding 3px 20px
		font-size $global-size-sm
	span 
		padding-left 20px
	
	&:hover
		background-color transparent
		color $color_primary

	&.btn--transparent
		background-color transparent
		border-color white
		color white

	&.btn--white
		background-color white
		border-color $color_primary
		color $color_primary
		&:hover
			background-color $color_primary
			color white

	&.btn--md
		display block
		padding 7px 20px
		font-size $global-size-md
		display flex
		justify-content space-between
		align-items center

	&.btn--lg
		display block
		padding 15px 40px
		font-size $global-size-lg
		display flex
		justify-content space-between
		align-items center
		max-width 400px
		border-radius 30px
