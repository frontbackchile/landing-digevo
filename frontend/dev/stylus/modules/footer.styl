footer
	color white
	text-align center
	position relative
	background-color transparent
	@media $break-sm
		text-align left

	h1, h2, h3, h4, h5
		color white !important
	
	.footer__flex
		@media $break-md
			display flex
			align-items center


	.footer__bg
		opacity 1
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		
	
	.footer__social
		ul
			columns 1 !important
			li
				display inline-block
				a
					padding 10px !important
					color white
					span
						font-size 32px

	
	.footer__banner
		@media $break-md
			margin-bottom 40px
		.footer__body
			text-align center	
			.footer__title
				font-weight bold
				
		.footer__links__app
			display flex
			justify-content center
			.footer__button
				margin 10px
				img
					height 50px				
	
	.footer__wrap
		position relative
		max-width $limit
		margin 0 auto
		padding 30px 20px
		@media $break-md
			padding 60px
		&.footer__wrap--sm
			@media $break-md
				padding 10px
		&.footer__wrap--md
			@media $break-md
				padding 60px 40px		
					
	
	.footer__links
		&.footer_links--primary
			text-align center
			@media $break-md
				text-align left

		ul li a
			color white
			display inline-block
			padding 5px 0
			font-size $global-size-md + 2
			line-height $global-lh-sm
			opacity .8
			text-align center
			&:hover
				opacity 1
			@media $break-sm
				padding 15px 0
			&:hover
				color $white
				

		.footer__links__list
			text-align left
			@media $break-md
				display block

		
		.footer__links__contact
			a
				color white
			.footer__description
				span
					margin-left 10px
					@media $break-md
						margin-right 10px
				a
					color white !important
							
		
		.footer__logos
			display flex
			flex-direction column
			.footer__logo
				display inline-block
				margin-bottom 20px
				img
					height 40px
					@media $break-md
						height 60px
						margin initial
	
	.footer__links__dates
		.footer__title
			margin-bottom 20px

		.footer__description
			font-size 18px
			line-height 22px
			font-weight 300
			padding 5px 0px
			span
				float left
				margin-right 10px
				position relative
				top 2px
			
		
	.footer__links.footer__links--secondary
		font-size $global-size-xs
		overflow hidden
		border-top 1px solid rgba(255,255,255,.3)
		padding-top 20px
		a
			display inline-block
			margin 0 10px
			color white
			opacity .6
			&:hover
				opacity 1

		.footer__copyright
			@media $break-sm
				text-align center
			
			img
				display inline-block
				width 80px
				vertical-align middle
				stroker white	
	
	.footer__info
		padding 20px 10px
		border-top 1px solid rgba(255,255,255,.5)
		text-align center
		.footer__description
			font-size 14px
			a
				color white
				text-decoration underline